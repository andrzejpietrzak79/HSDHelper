<common:BootStrapper x:Class="HSDHelper.App"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:common="using:Template10.Common"
                     xmlns:HSDHelper="using:HSDHelper"
                     xmlns:converters="using:HSDHelper.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Custom.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:IntToDurationConverter x:Key="IntToDurationConverter" />
			<converters:DoubleToStringConverter x:Key="DoubleToStringConverter" />
			<converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:ConnectionStateToStringConverter x:Key="ConnectionStateToStringConverter" />

            <!--  custom resources go here  -->

        </ResourceDictionary>
    </Application.Resources>

</common:BootStrapper>
